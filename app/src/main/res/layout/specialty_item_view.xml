<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/min_padding"
    android:layout_marginStart="@dimen/min_padding"
    android:layout_marginEnd="@dimen/min_padding"
    app:cardCornerRadius="@dimen/min_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/mid_padding">

        <TextView
            android:id="@+id/name_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:text="@string/specialty" />

        <TextView
            android:id="@+id/id_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:text="@string/id" />

    </RelativeLayout>

</android.support.v7.widget.CardView>